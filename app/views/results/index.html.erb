<p id="notice"><%= notice %></p>

<h1><center>Listing Results</centre></h1>

<table class="table" border="1" style= "width:80%;margin-left:10%; margin-right:10%;">
  <thead>
    <tr>
      <th>Time</th>
      <th>Molecule Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @results.reverse.each do |result| %>
      <tr>
        <td><%= result.created_at.in_time_zone("Japan").to_s[0..-7] %></td>
        <td><%= result.get_name %></td>
        <td>
          <% if result.get_status == "Finish!" %>
            <b style ="color:green"><%= result.get_status %><b>
          <% else %>
            <b style ="color:red"><%= result.get_status %><b>
          <% end %>
        </td>
        <td>
        <% if result.get_status == "Finish!" %>
          <%= link_to 'Result', result, style:"margin-left:20px", class: "glyphicon glyphicon-eye-open" %>
          <%= link_to 'Destroy', result, style:"margin-left:20px", class: "glyphicon glyphicon-trash", method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Result', new_result_path, class: "btn btn-default" %>
